{% if inventory_hostname == 'minio1' %}

# Domain address
DOMAIN_ADDRESS={{ DOMAIN_ADDR }}
MINIO_API_SUB={{ MINIO1_API_SUB_DOMAIN }}
MINIO_WEB_PANEL_SUB={{ MINIO1_WEB_PANEL_SUB_DOMAIN }}

# restart policy
RESTART_POLICY=unless-stopped

# Minio user and pass
MINIO_ROOT_USER={{ ROOT_USER }}
MINIO_ROOT_PASSWORD={{ ROOT_PASSWORD }}
ACCESS_KEY={{ MINIO_ACCESS_KEY }}
SECRET_KEY={{ MINIO_SECRET_KEY }}

# Server Name
HOSTNAME=minio1-server

{% elif inventory_hostname == 'minio2' %}

# Domain address
DOMAIN_ADDRESS={{ DOMAIN_ADDR }}
MINIO_API_SUB={{ MINIO2_API_SUB_DOMAIN }}
MINIO_WEB_PANEL_SUB={{ MINIO2_WEB_PANEL_SUB_DOMAIN }}

# restart policy
RESTART_POLICY=unless-stopped

# Minio user and pass
MINIO_ROOT_USER={{ ROOT_USER }}
MINIO_ROOT_PASSWORD={{ ROOT_PASSWORD }}
ACCESS_KEY={{ MINIO_ACCESS_KEY }}
SECRET_KEY={{ MINIO_SECRET_KEY }}

# Server Name
HOSTNAME=minio2-server

{% endif %}
